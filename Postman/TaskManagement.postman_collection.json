{
  "info": {
    "name": "Task Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api/v1" },
    { "key": "auth_token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth: Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth","register"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"manager\"\n}"
        }
      }
    },
    {
      "name": "Auth: Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Auth: Get Profile",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
        "url": { "raw": "{{base_url}}/auth/me", "host": ["{{base_url}}"], "path": ["auth","me"] }
      }
    },
    {
      "name": "Auth: Logout",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
        "url": { "raw": "{{base_url}}/auth/logout", "host": ["{{base_url}}"], "path": ["auth","logout"] }
      }
    },
    {
      "name": "Projects: Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/projects", "host": ["{{base_url}}"], "path": ["projects"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Project\",\n  \"description\": \"Project description\"\n}"
        }
      }
    },
    {
      "name": "Projects: List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
        "url": { "raw": "{{base_url}}/projects", "host": ["{{base_url}}"], "path": ["projects"] }
      }
    },
    {
      "name": "Tasks: Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/tasks", "host": ["{{base_url}}"], "path": ["tasks"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Task details\",\n  \"dueDate\": \"2025-07-31\",\n  \"project\": \"<projectId>\",\n  \"assignedTo\": \"<userId>\"\n}"
        }
      }
    },
    {
      "name": "Tasks: List by Project",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
        "url": {
          "raw": "{{base_url}}/tasks/{{projectId}}",
          "host": ["{{base_url}}"],
          "path": ["tasks","{{projectId}}"]
        }
      }
    },
    {
      "name": "Tasks: Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/{{taskId}}",
          "host": ["{{base_url}}"],
          "path": ["tasks","{{taskId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"completed\",\n  \"priority\": \"high\"\n}"
        }
      }
    },
    {
      "name": "Tasks: Batch Update",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/batch",
          "host": ["{{base_url}}"],
          "path": ["tasks","batch"]
        },
        "body": {
          "mode": "raw",
          "raw": "[\n  { \"id\": \"<taskId1>\", \"updates\": {\"status\":\"in-progress\"} },\n  { \"id\": \"<taskId2>\", \"updates\": {\"status\":\"completed\"} }\n]"
        }
      }
    },
    {
      "name": "Tasks: Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
        "url": {
          "raw": "{{base_url}}/tasks/{{taskId}}",
          "host": ["{{base_url}}"],
          "path": ["tasks","{{taskId}}"]
        }
      }
    },
    {
      "name": "Activity Logs: Get",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
        "url": {
          "raw": "{{base_url}}/tasks/logs/{{taskId}}",
          "host": ["{{base_url}}"],

          "path": ["tasks","logs","{{taskId}}"]
        }
      }
    }
  ]
}
